  <script type="text/javascript">
      toastr.warning('Welcome to Admin Portal. <br/>Please login to continue');

      $( "input" ).focus(function() {
        if($(this).val()){
          $('.labelFor').hide();
        }else{
          $('.labelFor').show();
        }
      });
      $( "input" ).keydown(function() {
        if($(this).val()){
          $('.labelFor').hide();
        }else{
          $('.labelFor').show();
        }
      });

  </script>

