        <div id="clientOptionsNav" class="w3-hide">
          <button id="viewClientsBtn" class="w3-bar-item w3-button w3-hover-grey menuItemBtn deep-purple-text darken-2 w3-margin-left"><i class="fa fa-users w3-margin-right "></i><b>View Clients</b></button>
