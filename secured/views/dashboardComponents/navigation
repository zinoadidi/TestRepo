    <script>

        function navDropDown(id) {
            var x = document.getElementById(id);
            if (x.className.indexOf("w3-show") == -1) {
                x.className += " w3-show";
                x.previousElementSibling.className += " w3-grey";
            } else { 
                x.className = x.className.replace(" w3-show", "");
                x.previousElementSibling.className = 
                x.previousElementSibling.className.replace(" w3-grey", "");
                x.previousElementSibling.style.backgroundColor = '#ecf0f1';
            }
        }
        $('.menuItemBtn').click(function(){
          $('.menuItemBtn').removeClass('w3-light-grey');
          $(this).addClass('w3-light-grey');
        });
        $('#loadDashboardBtn').click(function(){
          loadComponent('dashboard','stats','dashboardDisplayDiv');
        });
        $('#addCategoryBtn').click(function(){
            loadComponent('categories','create','dashboardDisplayDiv');

        });
        $('#viewCategoryBtn').click(function(){
            loadComponent('categories','view','dashboardDisplayDiv');
        });

        $('#addContentTypeBtn').click(function(){
            loadComponent('content-type','create','dashboardDisplayDiv');

        });
        $('#viewContentTypeBtn').click(function(){
            loadComponent('content-type','view','dashboardDisplayDiv');
        });

        $('#viewUsersBtn').click(function(){
            loadComponent('users','view/all','dashboardDisplayDiv');
        });
        $('#viewClientsBtn').click(function(){
            loadComponent('users','view/clients','dashboardDisplayDiv');
        });
        $('#viewProvidersBtn').click(function(){
            loadComponent('users','view/providers','dashboardDisplayDiv');
        });
        $('#addContentBtn').click(function(){
            loadComponent('contents','create','dashboardDisplayDiv');
        });
        $('#viewAllContentsBtn').click(function(){
            sessionStorage.contentType = 'all';
            loadComponent('contents','view','dashboardDisplayDiv');
        });
        $('#viewPendingContentsBtn').click(function(){
            sessionStorage.contentType = 'pending';
            loadComponent('contents','view','dashboardDisplayDiv');
        });
        $('#viewApprovedContentsBtn').click(function(){
            sessionStorage.contentType = 'approved';
            loadComponent('contents','view','dashboardDisplayDiv');
        });
        $('#viewRejectedContentsBtn').click(function(){
            sessionStorage.contentType = 'rejected';
            loadComponent('contents','view','dashboardDisplayDiv');
        });
        $('#logoutBtn').click(function(){
            logout();
        });
    </script>
                
             
                